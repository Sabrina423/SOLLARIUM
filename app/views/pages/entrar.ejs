<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Entrar</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/simple-notify@0.5.5/dist/simple-notify.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/simple-notify@0.5.5/dist/simple-notify.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">
    <link rel="stylesheet" href="/css/entrar.css">
    <script src="/js/script.js"></script>

</head>
<body>
    <nav class="container">
        <nav class="hero">
            <a href="/" class="material-symbols-outlined">keyboard_backspace</a>
            <h2>Bem-Vindo de volta!</h2>
        </nav>
        <main>
            <nav class="login-container">
                <h1>Entrar</h1>
                <form id="loginForm" action="/entrar" method="post">
                    <nav class="input-group">
                        <label for="email">E-mail</label>
                        <input type="email" id="email" name="email" placeholder="e-mail" required>
                        <small class="error-message"></small>

                        <label for="senha">Senha</label>
                        <div class="password-container">
                            <input type="password" id="senha" name="password" placeholder="senha" required>
                            <span class="toggle-password" id="togglePassword"></span>
                        </div>
                        <small class="error-messagesenha"></small> <!-- Adicione a classe "senha" aqui --> 
                        <p class="senha"> Senha incorreta</p>                 
                        
                    <nav class="link-container-senha">
                        <a href="/recsenha">Esqueceu sua senha?</a>
                    </nav>
                    <button type="submit">Sou Cliente</button>
                    <nav class="link-container">
                        <a href="/cadastroinicial">Quero me cadastrar!</a>
                        <ul class="box-redes-sociais">
                            <li class="facebook">
                                <a href="https://pt-br.facebook.com/"><i class="fab fa-facebook-f icon"></i></a>
                            </li>
                            <li class="instagram">
                                <a href="https://www.instagram.com/"><i class="fab fa-instagram icon"></i></a>
                            </li>
                        </ul>
                    </nav>
                </form>
            </nav>
        </main>
    </nav>
    <script>
        document.getElementById('loginForm').addEventListener('submit', function(event) {
            event.preventDefault();

            // Limpar mensagens de erro e estilos
            const inputs = document.querySelectorAll('input');
            inputs.forEach(input => {
                input.classList.remove('error');
                input.nextElementSibling.style.display = 'none';
            });

            let isValid = true;

            const emailInput = document.getElementById('email');
            const senhaInput = document.getElementById('senha');

            // Validação do e-mail (mínimo de 8 caracteres)
            if (emailInput.value.length < 8 || emailInput.value.length > 45) {
                isValid = false;
                emailInput.classList.add('error');
                emailInput.nextElementSibling.textContent = "O e-mail deve ter de 8 a 45 caracteres";
                emailInput.nextElementSibling.style.display = 'block';
            }

            // Validação da senha
            const senhaPattern = /^(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{6,}$/;
            if (!senhaPattern.test(senhaInput.value)) {
                isValid = false;
                senhaInput.classList.add('error');
                senhaInput.nextElementSibling.textContent = "senha incorreta";
                senhaInput.nextElementSibling.style.display = 'block';
            }

            if (isValid) {
                // Se tudo estiver válido, envie o formulário
                document.getElementById('loginForm').submit(); // Descomente para enviar o formulário
            }
        });

        // Adiciona o evento de clique para alternar a visibilidade da senha
        const togglePassword = document.getElementById('togglePassword');
        const senhaInput = document.getElementById('senha');

        togglePassword.addEventListener('click', function () {
            const type = senhaInput.getAttribute('type') === 'password' ? 'text' : 'password';
            senhaInput.setAttribute('type', type);
            this.querySelector('i').classList.toggle('fa-eye-slash'); // Alterna o ícone de olho
        });
    </script>
</body>
</html>
