<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="/css/reuniversal.css">
    <title>Painel ADM</title>
</head>

<body>
    <main>
    <nav class="container">
        <aside>
            <nav class="toggle">
                <nav class="logo">
                    <span class="danger">Orçamentos</span>
                    <h2>Sollari<span class="danger">um</span></h2>
                </nav>
                <nav class="close" id="close-btn">
                    <span class="material-icons-sharp">close</span>
                </nav>
            </nav>

            <nav class="sidebar">
                <a href="#">
                    <span class="material-icons-sharp">settings</span>
                    <h3>Configurações</h3>
                </a>
                <a href="/adm" class="active">
                    <span class="material-icons-sharp">insights</span>
                    <h3>Análises</h3>
                </a>
             
                <a href="/perfilprof">
                    <span class="material-icons-sharp">keyboard_backspace</span>
                    <h3>Voltar ao perfil</h3>
                </a>
        
                <a href="#" id="logout">
                    <span class="material-icons-sharp">logout</span>
                    <h3>Sair</h3>
                </a>
            </nav>
        </aside>
  <!-- Main content -->
  <main>
    <h1>Relatório de Projetos</h1>
    
    <section class="tabelas">
        <h2>Solicitações Recebidas</h2>
        <table id="projetotable">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Data</th>
                    <th>Valor</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% tarefas.forEach(function(projeto) { %>
                <tr>
                    <td><%= projeto.nome_projetos %></td>
                    <td><%= projeto.data_projetos %></td>
                    <td><%= projeto.valor_projetos %></td>
                    <td>
                        <section class="boton">
                            <button onclick="window.location='/aceitar?id=<%= projeto.id_projetos %>'" class="gosto">
                                <i class='bx bx-check aceitar'></i>
                            </button>
                            <button onclick="window.location='/excluir?id=<%= projeto.id_projetos %>'" class="desgosto">
                                <i class='bx bx-x recusar'></i>
                            </button>
                        </section>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </section>
</main>
</nav>
    
    <script>
        document.getElementById('logout').addEventListener('click', function(event) {
            event.preventDefault(); // Impede o link de navegar
            fetch('/logout', { method: 'POST' })
                .then(response => {
                    if (response.ok) {
                        window.location.href = '/'; // Redireciona para a página inicial após logout
                    } else {
                        alert('Erro ao fazer logout. Tente novamente.'); // Exibe mensagem de erro
                    }
                })
                .catch(error => {
                    console.error('Erro ao fazer logout:', error);
                    alert('Erro ao fazer logout. Tente novamente.');
                });
        });

        const showMoreButton = document.getElementById('showMore');
        const modal = document.getElementById('userModal');
        const closeModalButton = document.getElementById('closeModal');

        // Abre o modal quando o botão "Mostrar mais" for clicado
        showMoreButton.addEventListener('click', function(event) {
            event.preventDefault(); // Impede o link de navegar
            modal.style.display = 'block'; // Exibe o modal
        });

        // Fecha o modal quando o "X" for clicado
        closeModalButton.addEventListener('click', function() {
            modal.style.display = 'none'; // Fecha o modal
        });

        // Fecha o modal se o usuário clicar fora do conteúdo do modal
        window.addEventListener('click', function(event) {
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        });
    </script>

    <script src="/js/orders.js"></script>
    <script src="/js/adm.js"></script>
</body>
</html>
