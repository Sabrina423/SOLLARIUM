<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/cadastrocliente.css">
    <title>Cadastro</title>
</head>

<body>
    <nav class="box">
        <nav class="img-box">
            <img src="/imagens/LOGO_SOLLARIUM (8).png" alt="Logo Sollarium">
        </nav>

          <nav class ="form-box">
            <h2>Criar Conta</h2>
            <p>Já é cliente? <a href="/soucliente">Sou Cliente</a></p>
        <form action="/cadastrocliente" method="POST">

            <nav class="input-group">
            <label for="nome">Nome Completo</label>
            <input type="text" name="nome_cliente" placeholder="Nome" required>
        </nav>

             <nav class="input-group ">
                <label for="cpf">Digite seu CPF</label>
            <input type="text" name="cpf_cliente" placeholder="CPF" required>
        </nav>

        <nav class="input-group">
            <label for="Insira seu endereço">Endereço</label>
            <input type="text" name="endereco_cliente" placeholder="Endereço" required>
        </nav>
      
        <nav class = "input-group">
            <label for="Digite seu Email">Email</label>
            <input type="email" name="email_cliente" placeholder="Email" required>
        </nav>

        <nav class="input-group">
            <label for="Insira seu Contatoo">Contato</label>
            <input type="text" name="contato_cliente" placeholder="Contato" required>
        </nav>

        <nav class="input-group">
            <label for="Digite sua senha">Senha</label>
            <input type="password" name="senha_cliente" placeholder="Senha" required>
        </nav>

        <nav class="input-group w50">
            <label for="Confirme sua Senha">Confirmar senha</label>
            <input type="password" name="confirmar_senha_cliente" placeholder="Confirmar Senha" required>
        </nav>

            <nav class="input-group">
                <a href="/perfilcliente"><button>Ser Cliente</button></a>
            </nav>
        </form>
    </nav>
</nav>
           

      <script>
         document.getElementById('formCadastroCliente').addEventListener('submit', async function(event) {
        event.preventDefault();
        const formData = new FormData(this);
        const formObject = Object.fromEntries(formData);
        try {
            const response = await fetch('/cadastrocliente', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formObject)
            });
            const result = await response.json();
            if (response.ok) {
                alert(result.mensagem);
            } else {
                alert('Erro: ' + result.error);
            }
        } catch (error) {
            alert('Erro ao enviar dados: ' + error.message);
        }
    });

      </script>

</body>

</html>