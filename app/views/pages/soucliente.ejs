<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sou Cliente</title>
    <link rel="stylesheet" href="css/soucliente.css">
</head>
<body>
    <nav class="container">
        <nav class="hero">
    
        </nav>
<main>
    <nav class="login-container">
        <nav class="logo">
            <img src="imagens/LOGO_SOLLARIUM (8).png" alt="Logo">
        </nav>

        <h1>Login</h1>
        <form id="loginForm" action="/perfilcliente" method="post">
            <nav class="input-group">
            <label for="email">E-mail</label>
            <input type="email" id="email" name="email" placeholder="e-mail" required>
            <span class="error" id="emailError"></span>

            <label for="senha">Senha</label>
            <input type="password" id="senha" name="password" placeholder="senha" required>
            <span class="error" id="passwordError"></span>
        </nav>

            <button type="submit">Sou Cliente</button>
        </form>
    </nav>

</main>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function(event) {
            let errors = false;
            const email = document.getElementById('email');
            const password = document.getElementById('senha');

            // Reset error states
            document.getElementById('emailError').textContent = '';
            document.getElementById('passwordError').textContent = '';

            email.classList.remove('error-border');
            password.classList.remove('error-border');

            // Validate fields
            if (email.value === '') {
                document.getElementById('emailError').textContent = 'E-mail é obrigatório';
                email.classList.add('error-border');
                errors = true;
            }
            if (password.value === '') {
                document.getElementById('passwordError').textContent = 'Senha é obrigatória';
                password.classList.add('error-border');
                errors = true;
            } else if (password.value.length < 6) {
                document.getElementById('passwordError').textContent = 'Senha deve ter no mínimo 6 caracteres';
                password.classList.add('error-border');
                errors = true;
            }

            if (errors) {
                event.preventDefault();
            }
        });
    </script>

<% if (typeof errors !== 'undefined') { %>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            <% if (errors.email) { %>
                document.getElementById('email').classList.add('error-border');
                document.getElementById('emailError').textContent = '<%= errors.email %>';
            <% } %>
            <% if (errors.password) { %>
                document.getElementById('senha').classList.add('error-border');
                document.getElementById('passwordError').textContent = '<%= errors.password %>';
            <% } %>
        });
    </script>
<% } %>

</body>
</html>
