<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/favicon.ico">
    <link rel="stylesheet" href="/css/perfilcliente.css">
    <title>Perfil do Usuário</title>
</head>

<body>
    <header class="site-header">
        <section class="header-container">
            <section class="logo">SOLLARIUM</section>
            <nav class="main-nav">
                <a href="/">Home</a>
                <a href="/dashboard">Dashboard</a>
            </nav>
            <button class="menu-toggle" aria-label="Toggle menu">&#9776;</button>
        </section>
    </header>

    <form action="/perfilcliente" method="post" enctype="multipart/form-data">
        <section class="profile-container">
            <section class="profile-left">
                <section class="profile-header">
                    <section>
                        <h1 id="user-name">Nome do Usuário</h1>
                        <p id="user-state">Estado</p>
                        <nav class="photo-actions">
                        
                            <%
                                 arquivo = { imagem: "/imagens/perfil/imgperfil.png" };
                                if (autenticado.imagem != null) {
                                    arquivo.imagem = imagem;
                                } 
                            %>
                            <input type="file" id="inputArquivo" style="display: none;" accept="image/*" onchange="loadImg(event)" />
                            <img id="img-preview" src="<%= arquivo.imagem %>" alt="Clique para mudar a imagem" />

                            <script>
                                const inputArquivo = document.getElementById('inputArquivo');
                                const imagem = document.getElementById('imagem');

                                imagem.addEventListener('click', () => {
                                    inputArquivo.click();
                                });

                                inputArquivo.addEventListener('change', (event) => {
                                    const arquivo = event.target.files[0];
                                    if (arquivo) {
                                        const url = URL.createObjectURL(arquivo);
                                        imagem.src = url;
                                    }
                                });

                                function mascaraCep(input) {
            let cep = input.value.replace(/\D/g, "");
            if (cep.length > 5) {
                cep = cep.replace(/(\d{5})(\d)/, "$1-$2");
            }
            input.value = cep;
        }
                            </script>
                    <img id="profile-pic" src="default-profile.jpg">
                    <nav class="edit-photo-button">
                        <button type="button" id="edit-photo-button" onclick="togglePhotoMenu()">Editar Foto</button>
                    </nav>
                    <div id="photo-menu" class="photo-menu" style="display: none;">
                        <nav class="close-menu">
                            <button type="button" onclick="togglePhotoMenu(event)">×</button>
                        </nav>
                    </section>
                </section>
            </section>

            <section class="profile-right">
                <nav class="profile-details">
                    <h2>Informações do Perfil</h2>
                    <input type="text" id="full-name" name="nome" placeholder="Nome Completo" value="<%= valores.nome %> ">
                    <input type="text" id="email" name="email" placeholder="Email" value="<%= valores.email %> ">
                    <input type="number" id="cep" name="cep" placeholder="CEP" value="<%= valores.cep %> ">
                    <input type="text" id="complemento" name="complemento" placeholder="complemento" value="<%= valores.complemento%> ">
                    <input type="text" id="numero" name="numero" placeholder="Número da residência" value="<%= valores.numero %> ">
                    <input type="tel" id="phone" name="tel" placeholder="Telefone" value="<%= valores.fone %> " maxlength="15" oninput="validatePhone(this.value)">
                    <span id="phone-error" style="color: red; display: none; font-family: sans-serif; padding: 10px;"></span>
                    <span id="phone-success" style="color: green; display: none; font-family: sans-serif; padding: 10px;">Telefone válido!</span>
                    <button type="submit">Salvar</button>
                </nav>
            </section>
        </section>
    </form>

    <section class="professionals-carousel">
        <h2>Profissionais contratados</h2>
        <nav class="carousel-wrapper">
            <nav class="carousel-container">
                <nav class="professional-card">
                    <img src="/imagens/perfil/imgperfil.png" alt="Profissional 1">
                    <h3>João Silva</h3>
                    <p>Especialização: Instalador de Painéis Solares</p>
                </nav>
                <nav class="professional-card">
                    <img src="/imagens/perfil/imgperfil.png" alt="Profissional 2">
                    <h3>Maria Oliveira</h3>
                    <p>Especialização: Consultora de Energia Solar</p>
                </nav>
                <nav class="professional-card">
                    <img src="/imagens/perfil/imgperfil.png" alt="Profissional 3">
                    <h3>Pedro Santos</h3>
                    <p>Especialização: Projetista de Sistemas Solares</p>
                </nav>
                <!-- Adicione mais cartões conforme necessário -->
            </nav>
        </nav>
        <button class="carousel-button carousel-prev" onclick="prevSlide()">&#10094;</button>
        <button class="carousel-button carousel-next" onclick="nextSlide()">&#10095;</button>
    </section>

    <script src="/js/perfilcliente.js"></script>

</body>
</html>
