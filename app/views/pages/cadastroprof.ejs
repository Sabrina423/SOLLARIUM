       document.getElementById('cadastroFormprof').addEventListener('submit', function(event) {
    event.preventDefault(); // Previne o envio do formulário

    // Limpa mensagens de erro anteriores
    document.querySelectorAll('.error-message').forEach(el => el.innerText = '');

    let hasError = false;

    // Validação do Nome
    const nomeProf = document.getElementById('nome_prof').value;
    if (nomeProf.length < 3 || nomeProf.length > 45) {
        document.getElementById('nomeError').innerText = "Nome deve ter entre 3 e 45 caracteres.";
        hasError = true;
    }

    // Validação do CPF
    const cpfProf = document.getElementById('cpf_prof').value.replace(/\D/g, ''); // Remove caracteres não numéricos
    if (cpfProf.length !== 11) {
        document.getElementById('cpfError').innerText = "CPF deve ter 11 dígitos.";
        hasError = true;
    }

    // Validação do Estado
    const estadoProf = document.getElementById('estado_prof').value;
    if (!estadoProf) {
        document.getElementById('estadoError').innerText = "Selecione um estado.";
        hasError = true;
    }

    // Validação do E-mail
    const emailProf = document.getElementById('email_prof').value;
    const emailPattern = /\S+@\S+\.\S+/;
    if (!emailPattern.test(emailProf)) {
        document.getElementById('emailError').innerText = "Digite um e-mail válido.";
        hasError = true;
    }

    // Validação do Telefone
    const telefoneProf = document.getElementById('telefone_prof').value.replace(/\D/g, ''); // Remove caracteres não numéricos
    if (telefoneProf.length < 10 || telefoneProf.length > 11) {
        document.getElementById('telefoneError').innerText = "Telefone deve ter entre 10 e 11 dígitos.";
        hasError = true;
    }

    // Validação da Senha
    const senhaProf = document.getElementById('senha_prof').value;
    const senhaValida = validatePasswordCriteria(senhaProf);
    if (!senhaValida) {
        document.getElementById('senhaError').innerText = "A senha deve ter pelo menos 8 caracteres, uma letra maiúscula e um caractere especial.";
        hasError = true;
    }

    // Validação da Confirmação de Senha
    const confirmaSenhaProf = document.getElementById('confimasenha_prof').value;
    if (confirmaSenhaProf !== senhaProf) {
        document.getElementById('confirmaSenhaError').innerText = "As senhas não coincidem.";
        hasError = true;
    }

    // Validação da Área de Atuação
    const areaProf = document.getElementById('area_prof').value;
    if (areaProf.length < 3 || areaProf.length > 30) {
        document.getElementById('areaError').innerText = "Área de atuação deve ter entre 3 e 30 caracteres.";
        hasError = true;
    }

    // Validação da Experiência
    const experienciaProf = document.getElementById('experiencia_prof').value;
    if (isNaN(experienciaProf) || experienciaProf < 0) {
        document.getElementById('experienciaError').innerText = "Anos de experiência devem ser um número positivo.";
        hasError = true;
    }

    // Se não houver erros, envie o formulário
    if (!hasError) {
        this.submit();
    }
});

// Função para validar critérios de senha
function validatePasswordCriteria(senha_prof) {
    const lengthCriteria = senha_prof.length >= 8;
    const upperCaseCriteria = /[A-Z]/.test(senha_prof);
    const specialCharCriteria = /[!@#$%^&*(),.?":{}|<>]/.test(senha_prof);
    return lengthCriteria && upperCaseCriteria && specialCharCriteria;
}


