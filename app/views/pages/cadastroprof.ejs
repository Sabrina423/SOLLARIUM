        document.addEventListener('DOMContentLoaded', function() {
            function applyCPFMask(value) {
                return value
                    .replace(/\D/g, '') // Remove tudo que não é dígito
                    .replace(/(\d{3})(\d)/, '$1.$2')
                    .replace(/(\d{3})(\d)/, '$1.$2')
                    .replace(/(\d{3})(\d{1,2})$/, '$1-$2');
            }

            function applyPhoneMask(value) {
                return value
                    .replace(/\D/g, '') // Remove tudo que não é dígito
                    .replace(/(\d{2})(\d)/, '($1) $2')
                    .replace(/(\d{5})(\d)/, '$1-$2')
                    .replace(/(\d{5})(\d{1,4})$/, '$1-$2');
            }

            document.getElementById('cpf_prof').addEventListener('input', function() {
                this.value = applyCPFMask(this.value);
            });

            document.getElementById('telefone_prof').addEventListener('input', function() {
                this.value = applyPhoneMask(this.value);
            });
        });
